			arr[i] = Integer.parseInt(st.nextToken());
		}
		
		Arrays.sort(arr);
		
		int count = 0;
		double start = Math.max(arr[0] - 0.5, 0);
		double end = 0;
		
		for (int i = 0; i < arr.length; i++) {
			
		}
	}

}
