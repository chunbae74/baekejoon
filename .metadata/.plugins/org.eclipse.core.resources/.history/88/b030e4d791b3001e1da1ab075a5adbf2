import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.util.Arrays;
import java.util.HashMap;

public class _1339 {

	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
		int N = Integer.parseInt(br.readLine());
		String[] Originarr = new String[N];
		String[][] arr = new String[N][2];
		int lenMax = 0;
		
		for (int i = 0; i < N; i++) {
			Originarr[i] = br.readLine();
		}
		
		Arrays.sort(Originarr);

		for (int i = 0; i < N; i++) {
			arr[i] = String.format("%" + lenMax + "s", Originarr[i]);
		}
		
		HashMap<Character, Integer> hm = new HashMap<>();
		int num = 9;
		for (int i = 0; i < lenMax; i++) {
			for (int j = 0; j < arr.length; j++) {
			// 길이가 안된다면 패스
			if (arr[j].charAt(i) == ' ') continue;
			
			char c = arr[j].charAt(i);
			// 만약 이미 존재한다면
			if (!hm.containsKey(c)) {
				hm.put(c, num);
				num --;
			}
			}	
		}
		
		int sum = 0;
		for (int i = 0; i < Originarr.length; i++) {
			StringBuilder sb = new StringBuilder();
			for (int j = 0; j < Originarr[i].length(); j++) {
				sb.append(hm.get(Originarr[i].charAt(j)));
			}
			
			sum += Integer.parseInt(sb.toString());
		}
		
		bw.write(sum + "");
		bw.flush();
		bw.close();
		
	}

}
